rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Collection for all to-dos
    match /todos/{todoId} {
      // 1. Allow Read/Update/Delete ONLY if the user is signed in 
      //    AND the user owns the document (resource.data.userId matches user's UID)
      allow read, update, delete: if request.auth != null 
                                 && request.auth.uid == resource.data.userId;

      // 2. Allow Create ONLY if the user is signed in 
      //    AND the incoming data (request.resource.data) has a userId field 
      //    that matches the user's UID.
      allow create: if request.auth != null 
                  && request.resource.data.userId == request.auth.uid;
    }
  }
}
